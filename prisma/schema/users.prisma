model User {
  id                String                 @id @default(cuid())

  last_name         String
  first_name        String
  email             String              @unique
  password          String
  role              String?             @default("READER")
  username          String?             @unique
  profile_picture           String?
  
  accounts          Account[]
  articles          Articles[]
  ArticlesSubmitted ArticlesSubmitted[]
  comments          Comments[]
  favorites         Favorites[]
  sessions          Session[]
  User_Role         User_Role[]

  authProvider String?    // Pour identifier si c'est Google ou email/password
  verified     Boolean    @default(false)
  lastLogin    DateTime?
}

model User_Role {
  id      Int      @id @default(autoincrement())
  user_id String
  role    RoleType @default(READER)
  user    User     @relation(fields: [user_id], references: [id])
}

enum RoleType {
  EDITOR
  ADMIN
  MODERATOR
  AUTHOR
  READER
  EXPERT
}
