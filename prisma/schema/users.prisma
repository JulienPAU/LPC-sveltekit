model User {
  id                String                 @id @default(cuid())
  googleId          String?                @unique // Champ dédié pour l'ID Google

  name              String?
  last_name         String
  first_name        String
  email             String              @unique
  password          String
  username          String?             @unique
  profile_picture           String?
  
  accounts          Account[]
  articles          Articles[]
  comments          Comments[]
  favorites         Favorites[]
  sessions          Session[]
  User_Role         User_Role[]

  authProvider String?    // Pour identifier si c'est Google ou email/password
  verified     Boolean    @default(false)
  lastLogin    DateTime?
  createdAt    DateTime  

  moderatorRequestAt      DateTime?
  moderatorRequestStatus  ModeratorRequest?   @default(NOT_REQUESTED) 
}

model User_Role {
  id      Int      @id @default(autoincrement())
  user_id String
  role    RoleType @default(READER)
  user    User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

enum RoleType {
  EDITOR
  ADMIN
  MODERATOR
  AUTHOR
  READER
  EXPERT
}

enum ModeratorRequest {
  NOT_REQUESTED
  PENDING
  APPROVED
  REJECTED
  DECLINED
  ACK_REJECT
}
